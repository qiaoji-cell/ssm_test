<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.axjy.mapper.reruit.GradeMapper">

  <delete id="batchDelGradeByGardenId">
    delete from kms_grade where garden_id in
    <foreach collection="array" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
  <insert id="batchAddGrade">

    insert into kms_grade(gradeName,garden_id) value
      ('托班',#{gardenId}),
      ('小班',#{gardenId}),
      ('中班',#{gardenId}),
      ('大班',#{gardenId});

  </insert>
  <select id="findAll" resultMap="BaseResultMap">
    select * from kms_grade where garden_id = #{gardenId}
  </select>

  <resultMap id="BaseResultMap" type="com.axjy.pojo.recruit.Grade">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="gradeName" jdbcType="VARCHAR" property="gradename" />
  </resultMap>
  <sql id="Base_Column_List">
    id, gradeName
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from kms_grade
    where id = #{id,jdbcType=BIGINT}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from kms_grade
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.axjy.pojo.recruit.Grade" useGeneratedKeys="true">
    insert into kms_grade (gradeName)
    values (#{gradename,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.axjy.pojo.recruit.Grade" useGeneratedKeys="true">
    insert into kms_grade
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="gradename != null">
        gradeName,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="gradename != null">
        #{gradename,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.axjy.pojo.recruit.Grade">
    update kms_grade
    <set>
      <if test="gradename != null">
        gradeName = #{gradename,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.axjy.pojo.recruit.Grade">
    update kms_grade
    set gradeName = #{gradename,jdbcType=VARCHAR}
    where id = #{id,jdbcType=BIGINT}
  </update>
</mapper>